{
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#0060ff",
    },
    "workbench.colorTheme": "Prismatic Pink",
    "workbench.preferredDarkColorTheme": "Prismatic Pink",
    "workbench.preferredHighContrastColorTheme": "Prismatic Pink High Contrast",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.layoutControl.enabled": false,

    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.startupEditor": "readme",
    "workbench.tree.renderIndentGuides": "always",
    
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "'IosevkaCustomFixed', 'Illinois Mono', 'iA Writer Mono S', Monocraft, \"Fira Mono\", Inconsolata, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 13,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.roundedSelection": false,
    "editor.tabSize": 2,
    "editor.wordWrap": "off",

    "editor.inlayHints.enabled": "onUnlessPressed",
    "editor.guides.bracketPairs": "active",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.stickyScroll.enabled": true,
    "editor.scrollbar.vertical": "visible",

    "editor.acceptSuggestionOnCommitCharacter": false, // autocomplete on dot
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.suggestSelection": "first",

    "explorer.autoReveal": false,
    "explorer.compactFolders": false,

    "window.commandCenter": true,
    "window.density.editorTabHeight": "compact",
    "window.titleBarStyle": "custom",

    "diffEditor.ignoreTrimWhitespace": false,
    "git.blame.editorDecoration.enabled": true,

    "terminal.integrated.scrollback": 10000,

    "zenMode.hideLineNumbers": false,


    "[markdown]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.wordWrap": "off"
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[c]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[c++]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "java.import.gradle.version": "8.14",
    "java.import.gradle.wrapper.enabled": false,
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide"
    },
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "nix.serverSettings": {
        // check https://github.com/oxalica/nil/blob/main/docs/configuration.md for all options available
        "nil": {
            "formatting": { "command": [ "nixfmt" ],
            },
        },
        // check https://github.com/nix-community/nixd/blob/main/nixd/docs/configuration.md for all nixd config
        "nixd": {
            "formatting": { "command": [ "nixfmt" ],
            },
            "options": {
            },
        }
    },
    "[typst]": {
        "editor.wordWrap": "off",
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[typst-code]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },


    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    "code-eol.crlfCharacter": "←↓",

    "hexeditor.columnWidth": 32,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",

    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.closureCaptureHints.enable": true,
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "with_block",
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",

    "clang-tidy.buildPath": "./build",
    "clang-tidy.checks": [
        "bugprone-*",
        "clang-analyzer-*",
        "concurrency-*",
        "cppcoreguidelines-*",
        "misc-*",
        "modernize-*",
        "performance-*",
        "portability-*",
        "readability-*",
        "-misc-non-private-member-variables-in-classes",
        "-misc-no-recursion",
        "-modernize-use-trailing-return-type",
        "-readability-identifier-length",
        "-readability-named-parameter",
        "-header-filter=.*"
    ],
    
    "markdownlint.config": {
        "MD013": {
            "code_block_line_length": 100,
            "line_length": 100,
        },
        "MD022": false,
        "MD031": false,
        "MD032": false,
        "MD033": false,
    },

    //"latex-workshop.latex.watch.usePolling": true, // allow autobuild
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.outDir": "%DIR%/build", // searches for .pdf
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape", // needed for minted
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-aux-directory=build",
                "-output-directory=build",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape", // needed for minted
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.warning.show": false,
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,

    "tinymist.exportPdf": "onSave",
    "tinymist.preview.refresh": "onSave",

    "colorize.languages": [
        "css",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg",
        "markdown",
        "javascript",
        "typescript"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    "theme-prismatic-pink.boldDefaultMutableVariables": true,
}
